green = #B3BB67
blue = #7FA0BC

[bar/top]
;monitor = ${env:MONITOR:HDMI-A-0}
width = 100%
height = 30
;offset-x = 1%
;offset-y = 1%
;radius = 6.0
fixed-center = false
bottom = false
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 0
;line-color = #f00
border-size = 4
border-color = ${colors.background}
padding-left = 1
padding-right = 1
module-margin-left = 1
module-margin-right = 1
;locale = fr_FR.UTF-8
font-0 = "artwiz lemon:pixelsize=11:antialias=true"
font-1 = "fontawesome-webfont:pixelsize=11:antialias=true"
font-2 = "DejaVu Sans Mono for Powerline:pixelsize=11:antialias=true"
;font-1 = unifont:fontformat=truetype:size=12:antialias=false;0
;font-2 = FontAwesome:size=15;1
modules-left = workspace
modules-center = xtitle
modules-right = volume cpu memory eth time
;tray-position =
;tray-padding = 2
;tray-background = ${colors.background-alt}
;tray-transparent = true
;tray-offset-x =
;tray-detached = false
;tray-maxsize = 24

[module/scrot]
type = custom/text
content = 
content-foreground = ${colors.foreground}
