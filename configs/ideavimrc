" general settings
" set mapleader
let mapleader=","
" tab settings
set expandtab
set shiftwidth=4
set tabstop=4
" indent settings
set autoindent
" search settings
set ignorecase
set incsearch
set hlsearch
" status line stuff
"set statusline=%F%m%r%h%w\ [FORMAT=%{&ff}]\ [TYPE=%Y]\ [ASCII=\%03.3b]\ [HEX=\%02.2B]\ [POS=%04l,%04v][%p%%]\ [LEN=%L]
set laststatus=2
" other misc sets
set cursorline
set hidden
set modelines=0
set nocompatible
set nobackup
set noswapfile
set number
set visualbell
"set pastetoggle=<leader><F5>
nnoremap <silent> <leader>pp :set paste!<CR>
nnoremap <silent> <leader><space> :noh<CR>

nnoremap aa ggVG
