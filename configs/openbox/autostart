# fix xrdb
xrdb -I$HOME/.dotfiles/configs/x/ $HOME/.Xresources

# set our background
feh --bg-fill ~/.desktop_bg

# increase key repeat rate
xset r rate 190 40

# disable screen blanking
xset s off         # don't activate screensaver
xset -dpms         # disable DPMS (Energy Star) features.
xset s noblank     # don't blank the video device

# start urxvt daemon
urxvtd -q -o -f

# start compton daemon
compton --config ~/.dotfiles/configs/compton.conf -b

# start xbindkeys
xbindkeys

# start tint2
tint2

# start the bar
# $HOME/.dotfiles/configs/lemonbar/start_lemonbar.sh &

# source the home file
# use this to start an app for only one machine (for example, kodi/xbmc)
. ~/.autostart.local
